---
  interface Props {
    class?: string
    subtitle?: string
    title: string
  }

  const { title, subtitle} = Astro.props
---

<article
  class={`
    ${Astro.props.class}
    relative rounded-xl
    backdrop-blur-md
    col-span-5
    border border-black/10
    shadow-inner shadow-white/10
    group
    overflow-hidden
  `}
>
  <div class="z-10 absolute bottom-0 top-0 w-full h-full bg-gradient-to-b  from-transparent from-40% via-black/50 to-black/80"></div>

  <slot name="image"></slot>

  <div class="relative select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full">
    <h2 class="font-semibold text-balance mb-4 text-3xl">{title}</h2>
    {subtitle && (<h3 class="text-3xl font-semibold text-zinc-200/80 mb-4">{subtitle}</h3>)}
    <slot name="content"></slot>
  </div>
</article>